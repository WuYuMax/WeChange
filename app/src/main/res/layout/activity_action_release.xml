<?xml version="1.0" encoding="utf-8"?>
<!--活动 名称 贴图集  地点 开始报名时间 结束时间 人数 活动所需人数 详情-->
<!--发布者qq -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ceffe6"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/holo_blue_light">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    />
                <Button
                    android:id="@+id/activity_release_backbutton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corn_30_background"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/activity_release_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="活动名称"
                        />
                    <EditText
                        android:id="@+id/activity_release_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="活动开始日期 (格式 2019-3-11)"
                        />
                    <EditText
                        android:id="@+id/activity_release_enddata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="活动结束日期（格式3-11）"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corn_30_background"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/activity_release_neednumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="所需人数"
                        />
                    <EditText
                        android:id="@+id/activity_release_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="活动地点"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corn_30_background"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/activity_release_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:minHeight="100dp"
                        android:hint="活动详情"
                        android:background="@android:color/white"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/activity_release_pics"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp">
                        </android.support.v7.widget.RecyclerView>

                        <Button
                            android:id="@+id/activity_release_addpic"
                            android:layout_marginLeft="15dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_add_black_24dp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/activity_release_prelook"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预览"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20dp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/activity_release_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@android:color/holo_blue_light"
                android:text="发布"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="20dp"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>