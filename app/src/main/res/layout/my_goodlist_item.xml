<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#ceffe6"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/corn_30_background"
        >

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/my_goodlist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="APP"
                android:textColor="@android:color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/my_good_createTime_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单时间："
                    />
                <TextView
                    android:id="@+id/my_good_createTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="非常牛逼"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/my_good_price_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="订单价格：￥"
                    />
                <TextView
                    android:id="@+id/my_good_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="99999999"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/my_good_status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单状态："
                    />
                <TextView
                    android:id="@+id/my_good_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="交易中"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/my_good_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="联系卖家"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"
                />
            、
            <TextView
                android:id="@+id/my_good_conceal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消订单"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>